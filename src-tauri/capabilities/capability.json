{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "capability",
  "description": "核心功能权限配置",
  "local": true,
  "windows": [
    "main"
  ],
  "permissions": [
    "core:path:allow-join",
    "core:path:default",
    "core:event:allow-listen",
    "core:event:default",
    "store:default",
    "dialog:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-rename",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-watch",
    "fs:read-dirs",
    {
      "identifier": "fs:scope",
      "allow": [
        "**/*"
      ]
    },
    "log:default"
  ]
}